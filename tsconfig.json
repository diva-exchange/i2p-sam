{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": false,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*.ts"
  ]
}

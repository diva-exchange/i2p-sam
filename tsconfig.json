{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts"
  ]
}
